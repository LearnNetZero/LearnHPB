/**
 * This is a simple hello world, showing how to set up a simple world, 
 *		load a model, and set the camera to a viewpoint once the model
 *		has loaded.
 */

	
	o3djs.require('hemi.core');
	o3djs.require('o3djs.util');


	var unit2 = unit2 || {};
	var unit2Test = unit2Test || {};

	
	unit2.start = function(onCompleteCallback) {
		
		this.onCompleteCallback = onCompleteCallback;
		
		jqUnit.module('UNIT 2'); 
		
		jqUnit.expect(2);
		jqUnit.test("load model wrong url", unit2Test.step_1);

		
	};
	
	unit2.step_2 = function() {

		var result = hemi.world.camera.unsubscribe(unit2Test.readySubscription, hemi.msg.ready);
		jqMock.assertThat(unit2Test.model , is.instanceOf(hemi.model.Model));
		unit2.cleanup();
		
	};

	unit2.cleanup = function() {
		
		//unit2Test.model.cleanup();
		unit2.onCompleteCallback.call();
		
	};
	
	
	unit2Test.step_1 = function()   {
		
		unit2Test.model = new hemi.model.Model();				// Create a new Model
		jqMock.assertThat(unit2Test.model , is.instanceOf(hemi.model.Model));
		
		unit2Test.model.setFileName('LearnGreenBuildings/ductwork2.json'); // Set the model file
		
		unit2Test.readySubscription = hemi.world.subscribe(hemi.msg.ready,
			function(msg) {
				unit2.step_2();
			});
		
		hemi.world.ready();   // Indicate that we are ready to start our script


	};



	
	

