/**
 * @namespace A module for running unit tests
 */
var test = (function(test) {


	/**
	 * A Unit test
	 * @author Raj Dye
	 */
	test.Unit0 = function(){
		
		/**
		 * This function is called when the test is complete 
		 * @type Function
		 */
		this.onCompleteCallback = null;
	
		/**
		 * The number of tests to run
		 * @type int
		 */
		this.testCount = 0;
		
		/**
		 * Index of the current test that we are running
		 * @type int
		 */
		this.testIdx = 0;
		
		/**
		 * This is a delegate that is passed to each unit test in
		 * turn as we run them
		 * @type jQuery proxy
		 */
		this.onFinshedHandler = $.proxy(this.onTestFinished, this);
		
		/**
		 * The unit test that we are running
		 * @type Object (unit test)
		 */
		this.theCurrentTest = null;
		
		
	};
	
	test.Unit0.prototype = {
		/**
		 * starts the test
		 * @param Function callback when finished running the test
		 */
		start : function(onCompleteCallback) {
			
			this.onCompleteCallback = onCompleteCallback;
			
		},


		finished : function () {
			

			
		}
		
		
	};

	
	return test;
	
})(test || {});











