goog.provide('lgb.controller.PsControllerOriginal');

goog.require('lgb.controller.ControllerBase');

goog.require('lgb.events.WorldCreated');
goog.require('lgb.events.DataModelChanged');
goog.require('lgb.events.RequestDataModelChange');
goog.require('lgb.events.DataModelInitialized');

goog.require('lgb.model.ParticleSystemModel');
goog.require('lgb.model.ParticleSystemModel2');
goog.require('lgb.view.PsView');
goog.require('lgb.view.ParticleSystemAdminView');


/**
 * @constructor
 * @extends lgb.controller.ControllerBase
 */
lgb.controller.PsControllerOriginal = function() {
	lgb.controller.ControllerBase.call(this);
	this.init();
};
goog.inherits(lgb.controller.PsControllerOriginal, lgb.controller.ControllerBase);

lgb.controller.PsControllerOriginal.prototype.init = function() {

	this.dataModel = new lgb.model.ParticleSystemModel();
	this.view = new lgb.view.PsView(this.dataModel);
	this.bind_();
	this.dataModel.load();
};


/**
 * setup event listeners
 * @private
 */
lgb.controller.PsControllerOriginal.prototype.bind_ = function() {
	
	this.listenTo(this.dataModel, 
		lgb.events.DataModelInitialized.TYPE, 
		this.onDataModelInitialized);
		
	lgb.controller.PsControllerOriginal.superClass_.bind.call(this);
};


lgb.controller.PsControllerOriginal.prototype.onScenarioParsed = function(event) {
	this.dispatch(event);
};



lgb.controller.PsControllerOriginal.prototype.onDataModelInitialized = function(event) {
	this.view.init();
	this.adminView = new lgb.view.ParticleSystemAdminView(this.dataModel, 'adminView');
	this.adminView.init();

	this.listenTo(this.adminView, 
		lgb.events.RequestDataModelChange.TYPE, 
		this.onRequestDataModelChange);

};


lgb.controller.PsControllerOriginal.prototype.onRequestDataModelChange = function(event) {
	
	var stateObject = event.payload;
	this.dataModel.change(stateObject);
	
};
