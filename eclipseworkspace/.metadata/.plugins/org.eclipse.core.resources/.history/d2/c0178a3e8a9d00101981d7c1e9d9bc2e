
o3djs.require('lgb.model.control.ControlBase');

/**
 */
var lgb = (function(lgb) {

	lgb.model = lgb.model || {};
	lgb.model.control = lgb.model.control || {};
	
	/**
	 * @class MVC model for select controls like RadioButtonGroup
	 * @extends lgb.model.control.ControlBase
	 */
	lgb.model.control.SelectionGroup = function(title) {
		
		lgb.model.control.ControlBase.call(this, id);
		
		this.title = title;
		
		if (undefined === id) {
			this.id = this.generateId();
		} else {
			this.id = this.validateId(id);
		}
		
		
		
		this.selectionItems =[];

	};


	lgb.model.control.SelectionGroup.prototype = {
		
		addItem: function(selectionItem) {
			this.selectionItems.push(selectionItem);
		},
		
		ceateItem: function(label, value, isSelected) {
			
			var selectionItem = new SelectionItem();
			
			
		}
		
		
/*
		setFloorHeight: function(floorHeight) {
			this.floorHeight = floorHeight;
			this.dispatch('ENVELOPE_DATA_MODEL_CHANGED');
		},
		setTotalFloors: function(totalFloors) {
			this.totalFloors = totalFloors;
			this.dispatch('ENVELOPE_DATA_MODEL_CHANGED');
		}
*/
		
	};
	

	lgb.model.control.SelectionGroup.inheritsFrom(lgb.model.control.ControlBase);
	
	
	return lgb;
	
})(lgb || {});












