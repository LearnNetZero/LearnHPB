



/**
 */


var lgb = (function(lgb) {

	lgb.model = lgb.model || {};
	lgb.model.control = lgb.model.control || {};
	
	/**
	 * @class MVC model for select controls like RadioButtonGroup
	 * @extends lgb.model.control.ControlBase
	 */
	lgb.model.control.SelectionGroup = function(title, id, eventName) {
		
		lgb.model.ModelBase.call(this);
		
		this.title = title;
		
		if (null === id || undefined === id) {
			this.id = this.generateId();
		} else {
			this.id = this.validateId(id);
		}
		
		this.eventName = eventName;
		
		this.selectionItems =[];

	};


	lgb.model.control.SelectionGroup.prototype = {
		
		generateId: function(selectionItem) {
			var id = this.title.split(' ').join('-');
			return id;

		},
		//todo:(raj) actually validate
		validateId: function(id) {
 
				
			return id;
			
		},
		
		addItem: function(selectionItem) {
			lgb.utils.validArgs(1, ['lgb.model.control.SelectionItem']);	  
				
			this.selectionItems.push(selectionItem);
		},
		
		createItem: function(label, value, isSelected) {
			
			var selectionItem = new lgb.model.control.SelectionItem(label, value, isSelected);
			this.selectionItems.push(selectionItem);
			
		}

	};
	

	lgb.model.control.SelectionGroup.inheritsFrom(lgb.model.ModelBase);
	
	
	return lgb;
	
})(lgb || {});












