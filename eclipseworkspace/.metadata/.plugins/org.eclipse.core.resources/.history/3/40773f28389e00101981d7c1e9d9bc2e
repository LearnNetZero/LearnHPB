
/**
 * @namespace 
 */
var lgb = (function(lgb) {


	lgb.model = lgb.model || {};
	lgb.model.control = lgb.model.controls || {};
	
	
	/**
	 * @class this is the base class for all HTML control type data models  
	 */
	lgb.model.control.ControlBase = function() {

	};

	lgb.model.control.ControlBase.prototype = {
		
		
		generateId : function () {
		
			if (null === this.title) {
				throw new Error('lgb.model.control.ModelBase.generateId() title is null');	
			}

			var id = this.title.split(' ').join('-');
			return id;
			
		},
		
		//todo:{raj} actually validate this id
		validateId : function (requestedId) {
		
			if (null === requestedId) {
				throw new Error('lgb.model.control.ModelBase.validateId() id is null');	
			}
			
			return requestedId;

			
		}

		
	};

	return lgb;
	
})(lgb || {});
