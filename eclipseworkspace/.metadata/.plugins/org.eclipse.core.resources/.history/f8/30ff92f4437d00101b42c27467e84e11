o3djs.require('lgb.model.UserAction');

/**
 * @namespace A module for managing the 2D GUI
 */
var lgb = (function(lgb) {


	/**
	 * @namespace A module for managing the 2D GUI
	 */
	lgb.view = lgb.view || {};
	lgb.view.controls = lgb.view.controls || {};


	lgb.view.controls.Slider = function(userAction){
		this.userAction = userAction;
		this.min = 0;
		this.max = 100;
		this.value = 50;
	};
	
	lgb.view.controls.Slider.prototype = {
		getHTML : function() {
			
//			var html =  '\t\t<input type="range" id="{0}" min="{1}" max="{2}"></input> <br />\n'
//				.format(this.userAction.name, this.min, this.max);

			var html =  '<form>\n' +
						'<input name="{0}" type="range" min="{1}" max="{2}" value="{3}">' +
						'</form>\n';
						
				html.format(this.userAction.name, this.min, this.max, this.value);		
				
//			<form>
//			  <input name="r" type="range" min="1" max="11" value="9">
//			  <input type="submit" value="Go">
//			</form>

//			var html =  '<div class="slider" id="{0}">\n' +
//							'<input class="slider-input" id="green-slider-input" />' +
//						'</div>';
//				
//			html = html.format(this.userAction.name);

			return html;
		}
	};

	
	return lgb;
	
})(lgb || {});











