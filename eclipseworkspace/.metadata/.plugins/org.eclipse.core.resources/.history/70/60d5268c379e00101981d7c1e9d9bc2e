
/**
 * @namespace A module for managing the 2D GUI
 */
var lgb = (function(lgb) {


	/**
	 * @namespace A module for managing the 2D GUI
	 */
	lgb.view = lgb.view || {};
	lgb.view.control = lgb.view.control || {};


	lgb.view.control.RadioButtonGroup = function(){
		lgb.view.ViewBase.call(this);
		

		this.idList =[];
	};
	
	lgb.view.control.RadioButtonGroup.prototype = {
		
		/*
		* @param dataModel, This is the MVC model
		*/
		process : function (dataModel) {
			dataModel.assertType(lgb.model.control.SelectionGroup);
			
			this.dataModel = dataModel;
		}
		
		getHTML : function() {
			
			var selectionItems = this.model.selectionItems;
			
			var len = selectionItems.length;
			
			var htmlAry = [];
			
			for (var i=0; i<len; i++) {
				
				var oneItem = selectionItems[i];
				
				var chk ='';
				if (oneItem.isSelected) {
					chk=' checked="checked"';
				}

				var id = '{0}_{1}'.format (this.model.id, i.toString()); //  + '_' + ;
				var str = '<input type="radio" id="{0}" name="{1}" value="{2}"{3}>{4}';
				
				str = str.format(id, this.model.id, oneItem.value, chk, oneItem.label );
				htmlAry.push(str);
				
			}
			
			var title = '<h5>{0}</h5>'.format(this.model.title);
			var htmlStr = title + htmlAry.join('<br />');
			
			return htmlStr;
		},
		
		bindEvents: function(){
			
			var len = this.idList.length;
			var delegateClick = $.proxy(this.onClick, this);
			
			var delegateClick = this.d(onClick);
			
			
			for (var i=0; i<len; i++) {
				
				var theId = idList[i];
				var selector = '#{0}'.format(theId);
				
				$(selector).click({value:action.id}, delegateClick );
				
				var str = '<input type="radio" id="{0}_{3}" name="{0}" value="{1}">{2}';
				
				str = str.format(this.model.id, oneItem.value, oneItem.label, i.toString() );
					
				
				htmlAry.push(str);
				
			}
			
		}
	};

	lgb.view.control.RadioButtonGroup.inheritsFrom(lgb.view.ViewBase);
	
	return lgb;
	
})(lgb || {});











